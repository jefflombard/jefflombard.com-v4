  "private": "true",
  "bugs": {
    "url": "https://github.com/jefflombard/jefflombard.com-v4/issues"
  },
  "homepage": "https://github.com/jefflombard/jefflombard.com-v4#readme",
  "dependencies": {
    "axios": "^0.18.0",
    "chalk": "^2.4.1",
    "compression": "^1.7.3",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "express-graphql": "^0.7.1",
    "graphql": "^14.0.2",
    "graphql-tag": "^2.10.0",
    "mongoose": "^5.3.11",
    "rss-parser": "^3.5.3",
    "xml-js": "^1.6.8"
